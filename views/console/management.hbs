<div class="apps">
	<h3>Apps</h3>
	<div class="filter-box">
		<form class="form-search pull-right">
			<select>
			  <option>iOS</option>
			  <option>Android</option>
				<option>Webclips</option>
			</select>
			<input type="text" placeholder="Search apps">
			<button type="submit" class="btn">Search</button>
		</form>
	</div>
	<div class="well">
		{{#each data.apps}}
		<div class="app_box">
			<a href="#appid" data-packageid="{{this.attributes.overview_packagename}}" data-platform="{{this.attributes.overview_platform}}" data-type="{{this.attributes.overview_type}}" data-url="{{this.attributes.overview_url}}" data-id="{{this.id}}">
				<p class="text-center"><b>{{this.attributes.overview_name}}</b></p>
				<img src="{{../config.publisher_location}}{{this.attributes.images_thumbnail}}" class="icon img-polaroid">
			</a>
		</div>
		{{/each}}
	</div>
</div>
<div class="stakes">
	<ul class="nav nav-tabs">
	  <li class="active">
	    <a href="#roles" data-toggle="tab">Roles</a>
	  </li>
	  <li><a href="#users" data-toggle="tab">Users</a></li>
	</ul>
	<div class="alert" style="display:none">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <span><span>
	</div>
	<div class="tab-content">
	  <div class="tab-pane active" id="roles">
	  	<ul class="nav nav-pills">
			  <li class="active"><a class="install" href="#roles_installed" data-toggle="tab">Installed</a></li>
			  <li><a class="not-installed" href="#roles_not-installed" data-toggle="tab">Not-installed</a></li>
			<button class="btn pull-right btn-danger">Uninstall</button>
			</ul>
			<div class="tab-content">
			  <div class="tab-pane active" id="roles_installed">
			  	
			  </div>
			  <div class="tab-pane" id="roles_not-installed">
			  	
			  </div>
			</div>
	  </div>
	  <div class="tab-pane" id="users">
			<ul class="nav nav-pills">
			  <li class="active"><a class="install" href="#users_installed" data-toggle="tab">Installed</a></li>
			  <li><a class="not-installed" href="#users_not-installed" data-toggle="tab">Not-installed</a></li>
			<button class="btn pull-right btn-danger">Uninstall</button>
			</ul>
			<div class="tab-content">
