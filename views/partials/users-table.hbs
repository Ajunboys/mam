<table cellpadding="0" cellspacing="0" border="0"
class="table table-striped table-bordered" id="main-table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>e Mail</th>			
			<th>Type</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		{{#data.users}}
		<tr>
			<td>{{firstName}}</td>
			<td>{{lastName}}</td>
			<td>{{email}}</td>			
			<td>{{type}}</td>
			<td class="center">
				
			<a href="assign_groups?user={{username}}"  class="btn-assign-roles" data-item="{{username}}" title="Assign Roles"><i class="icon-edit"> </i> Assign Roles</a>&nbsp; 	
				 
			<a href="#"  class="btn-invite" data-item="{{username}}" title="Invite"><i class="icon-envelope"> </i> Invite</a>&nbsp; 
			
			<a href="#"  class="btn-item-remove" data-item="{{username}}" title="Remove"><i class="icon-remove"> </i> Unassign</a>
			
			</td>
		</tr>
		{{/data.users}}
	</tbody>
</table>
